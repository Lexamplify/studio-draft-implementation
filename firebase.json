{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": [
    {
      "target": "products",
      "source": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "frameworksBackend": {
        "region": "us-central1"
      },
      "rewrites": [
        {
          "source": "/api/search-templates",
          "run": {
            "serviceId": "search-templates",
            "region": "us-central1"
          }
        },
        {
          "source": "/products/_next/**",
          "destination": "/products/_next/**"
        },
        {
          "source": "/products/**",
          "function": "ssrlexamplifyproducts"
        }
      ]
    }
  ]
}
