rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contact form submissions - allow anyone to create submissions
    match /contactSubmissions/{submissionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Only allow creation, no read/update/delete from client
    }
    
    // Demo requests - allow anyone to create requests
    match /demoRequests/{requestId} {
      allow create: if true; // Allow anonymous submissions for demo requests
      allow read, update, delete: if false; // Only allow creation, no read/update/delete from client
    }
    
    // User data and drafts
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events collection
    match /events/{eventId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Workspace collections
    match /workspaceTodos/{todoId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /workspaceNotes/{noteId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}

